{
  "manifest_version": 3,
  "name": "Tab Group Sender (Advanced)",
  "version": "2.0",
  "description": "Group devices and send tabs using a storage-based workaround with bitmasks and device registry.",
  "permissions": [
    "storage",        
    "tabs",           
    "contextMenus",   
    "notifications",  
    "alarms"          
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["utils.js", "background.js"]
  },
  "action": {
    "default_icon": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "default_title": "Manage Device Groups & Tabs",
    "default_popup": "popup.html"
  }
}