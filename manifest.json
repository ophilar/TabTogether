{
    "manifest_version": 3,
    "name": "Tab Group Sender",
    "version": "1.0",
    "description": "Group Firefox Account devices and send tabs to groups.",
  
    "permissions": [
      "storage",
      "sessions",
      "tabs",
      "contextMenus"
    ],
  
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
  
    "background": {
      "scripts": ["background.js"]
    },
  
    "browser_action": {
      "default_icon": "icons/icon-48.png",
      "default_title": "Manage Device Groups",
      "default_popup": "popup.html"
    },

    "action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Manage Device Groups",
        "default_popup": "popup.html"
        }
  }