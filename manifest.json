{
  "manifest_version": 3,
  "name": "TabTogether",
  "version": "0.0.1",
  "description": "Send tabs to multiple devices simultaneously.",
  "permissions": [
    "storage",        
    "tabs",           
    "contextMenus",   
    "notifications",  
    "alarms"          
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["utils.js", "background.js"],
    "type": "module"
  },
  "action": {
    "default_icon": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "default_title": "Manage Device Groups",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-group-sender-advanced@temporary-dev-id.org", 
      "strict_min_version": "109.0" 
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}